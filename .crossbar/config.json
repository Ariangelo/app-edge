{
    "version": 2,
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "crossbarRobotica",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": true,
                                        "publisher": true
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                  "type": "web",
                  "endpoint": {
                      "type": "tcp",
                      "port": "$PORT"
                  },
                  "paths": {
                      "/": {
                          "type": "static",
                          "directory": "../web"
                      },
                      "ws": {
                          "type": "websocket"
                      },
                      "call": {
                        "type": "caller",
                        "realm": "crossbarRobotica",
                        "role": "anonymous",
                        "options": {
                          "debug": true
                        }
                      }
                  }
                },
                {
                    "type": "websocket",
                    "endpoint": {
                        "type": "tcp",
                        "port": 9000
                    }
                }
            ]
        },
        {
            "type": "container",
            "options": {
                "pythonpath": [
                    ".."
                ]
            },
            "components": [
                {
                    "type": "class",
                    "classname": "roteador.ControleBackend",
                    "realm": "crossbarRobotica",
                    "transport": {
                        "type": "websocket",
                        "endpoint": {
                            "type": "tcp",
                            "host": "127.0.0.1",
                            "port": 9000
                        },
                        "url": "ws://127.0.0.1:9000/ws"
                    }
                }
            ]
        }
    ]
}
