{
  "version": 2,
  "workers": [
    {
      "type": "router",
      "realms": [
        {
          "name": "crossbarRobotica",
          "roles": [
            {
              "name": "anonymous",
              "permissions": [
                {
                  "uri": "",
                  "match": "prefix",
                  "allow": {
                    "call": true,
                    "register": true,
                    "publish": true,
                    "subscribe": true
                  },
                  "disclose": {
                    "caller": true,
                    "publisher": true
                  },
                  "cache": true
                }
              ]
            }
          ]
        }
      ],
      "transports": [
        {
          "type": "mqtt",
          "endpoint": {
            "type": "tcp",
            "port": 1883
          },
          "options": {
            "realm": "crossbarRobotica",
            "role": "anonymous",
            "payload_mapping": {
              "": {
                "type": "passthrough"
              }
            }
          }
        },
        {
          "type": "universal",
          "endpoint": {
            "type": "tcp",
            "port": 8080
          },
          "mqtt": {
            "options": {
              "realm": "crossbarRobotica",
              "role": "anonymous",
              "payload_mapping": {
                "": {
                  "type": "passthrough"
                }
              }
            }
          },
          "rawsocket": {
            "serializers": [
              "cbor",
              "msgpack",
              "ubjson",
              "json"
            ]
          },
          "websocket": {
            "ws": {
              "type": "websocket",
              "serializers": [
                "cbor",
                "msgpack",
                "ubjson",
                "json"
              ]
            }
          },
          "web": {
            "paths": {
              "/": {
                "type": "static",
                "directory": "../web",
                "options": {
                  "enable_directory_listing": true
                }
              },
              "ws": {
                "type": "websocket",
                "debug": true
              },
              "call": {
                "type": "caller",
                "realm": "crossbarRobotica",
                "role": "anonymous",
                "options": {
                  "debug": true
                }
              }
            }
          }
        }
      ]
    },
    {
      "type": "container",
      "options": {
        "pythonpath": [
          ".."
        ]
      },
      "components": [
        {
          "type": "class",
          "classname": "roteador.ControleBackend",
          "realm": "crossbarRobotica",
          "transport": {
            "type": "websocket",
            "endpoint": {
              "type": "tcp",
              "host": "localhost",
              "port": 8080
            },
            "url": "ws://localhost:8080/ws",
            "options": {
              "enable_webstatus": false
            }
          }
        }
      ]
    }
  ]
}