{
   "version": 2,
   "workers": [
      {
         "realms": [
            {
               "name": "crossbarRobotica",
               "roles": [
                  {
                     "name": "anonymous",
                     "permissions": [
                        {
                           "allow": {
                              "call": true,
                              "publish": true,
                              "register": true,
                              "subscribe": true
                           },
                           "cache": true,
                           "disclose": {
                              "caller": true,
                              "publisher": true
                           },
                           "match": "prefix",
                           "uri": "io.robotica.controle"
                        }
                     ]
                  }
               ]
            }
         ],
         "transports": [
            {
               "endpoint": {
                  "port": 1883,
                  "type": "tcp"
               },
               "options": {
                  "payload_mapping": {
                     "": {
                        "type": "passthrough"
                     }
                  },
                  "realm": "crossbarRobotica",
                  "role": "anonymous"
               },
               "type": "mqtt"
            },
            {
               "endpoint": {
                  "port": 9000,
                  "type": "tcp"
               },
               "mqtt": {
                  "options": {
                     "payload_mapping": {
                        "": {
                           "type": "passthrough"
                        }
                     },
                     "realm": "crossbarRobotica",
                     "role": "anonymous"
                  }
               },
               "type": "universal",
               "web": {
                  "paths": {
                     "/": {
                        "directory": "../web",
                        "options": {
                           "enable_directory_listing": true
                        },
                        "type": "static"
                     },
                     "call": {
                        "options": {
                           "debug": true
                        },
                        "realm": "crossbarRobotica",
                        "role": "anonymous",
                        "type": "caller"
                     },
                     "ws": {
                        "debug": true,
                        "type": "websocket"
                     }
                  }
               },
               "websocket": {
                  "ws": {
                     "serializers": [
                        "cbor",
                        "msgpack",
                        "ubjson",
                        "json"
                     ],
                     "type": "websocket"
                  }
               }
            }
         ],
         "type": "router"
      },
      {
         "components": [
            {
               "classname": "roteador.ControleBackend",
               "realm": "crossbarRobotica",
               "transport": {
                  "endpoint": {
                     "host": "localhost",
                     "port": 9000,
                     "type": "tcp"
                  },
                  "options": {
                     "enable_webstatus": false
                  },
                  "type": "websocket",
                  "url": "ws://localhost:9000/ws"
               },
               "type": "class"
            }
         ],
         "options": {
            "pythonpath": [
               ".."
            ]
         },
         "type": "container"
      }
   ]
}